<%- include("./partials/header.ejs"); %>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-center">Update Student</h2>
                <form method="post" action="/student/update/<%= data._id %>">
                    <div class="mb-2">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" name="name" class="form-control" id="name" value="<%= data.name %>">
                    </div>
                    <div class="mb-2">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" name="age" class="form-control" id="age" value="<%= data.age %>">
                    </div>
                    <div class="mb-2">
                        <label for="fees" class="form-label">Fees</label>
                        <input type="text" name="fees" class="form-control" id="fees" value="<%= data.fees %>">
                    </div>

                    <button type="submit" class="btn btn-warning">Update</button>
                    <button type="submit" class="btn btn-secondary">Home</button>
                </form>

            </div>

        </div>

    </div>

    <%- include("./partials/footer.ejs"); %>