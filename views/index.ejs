<%- include("./partials/header.ejs"); %>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-center">Add New Student</h2>
                <form method="post">
                    <div class="mb-2">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" name="name" class="form-control" id="name" placeholder="Enter name">
                    </div>
                    <div class="mb-2">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" name="age" class="form-control" id="age" placeholder="Enter age">
                    </div>
                    <div class="mb-2">
                        <label for="fees" class="form-label">Fees</label>
                        <input type="text" name="fees" class="form-control" id="fees" placeholder="Enter fees">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

            </div>
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-danger text-center">List of Student</h2>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Name</th>
                                <th scope="col">Age</th>
                                <th scope="col">Fees</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% var i=1 %>
                                <% data.forEach((item)=>{ %>
                                    <tr>
                                        <td>
                                            <%= i++ %>
                                        </td>
                                        <td>
                                            <%= item.name %>
                                        </td>
                                        <td>
                                            <%= item.age %>
                                        </td>
                                        <td>
                                            <%= item.fees %>
                                        </td>
                                        <td>
                                            <form action="/student/edit/<%= item._id %>" method="get" class="d-inline">
                                                <button type="submit" class="btn">
                                                    <i class="fas fa-pen-square text-info"></i>&nbsp;

                                                </button>
                                            </form>

                                            <form action="/student/delete/<%= item._id %>" method="post"
                                                class="d-inline">
                                                <button type="submit" class="btn">
                                                    <i class="fas fa-trash text-danger"></i>

                                                </button>
                                            </form>

                                        </td>
                                    </tr>
                                    <% }) %>

                        </tbody>
                </div>
            </div>
        </div>

        <%- include("./partials/footer.ejs"); %>